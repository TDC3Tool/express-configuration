{
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true,
		"jest": true
	},
	"extends": ["eslint:recommended", "airbnb-base", "prettier"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"no-console": 0,
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": 0,
		"space-before-function-paren": "off",
		"no-unused-vars": ["error", { "vars": "all", "args": "after-used" }],
		"comma-dangle": ["error", "never"]
	}
}
