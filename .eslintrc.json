{
	"extends": ["eslint:recommended", "airbnb-base", "prettier"],
	"env": {
		"node": true,
		"commonjs": true,
		"es6": true,
		"jest": true
	},
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true,
			"experimentalObjectRestSpread": true
		}
	},
	"rules": {
		"no-console": 0,
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": 0,
		"space-before-function-paren": "off",
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "all",
				"varsIgnorePattern": "^_",
				"argsIgnorePattern": "^_"
			}
		],
		"comma-dangle": ["error", "never"],
		"import/prefer-default-export": 0,
		"lines-between-class-members": 0,
		"no-underscore-dangle": 0
	}
}
